{
  "name": "mcp-airtable",
  "version": "1.0.0",
  "description": "Clean FastMCP server for Airtable integration",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run --exclude 'src/__tests__/e2e/**'",
    "test:watch": "vitest --exclude 'src/__tests__/e2e/**'",
    "test:coverage": "vitest run --coverage --exclude 'src/__tests__/e2e/**'",
    "test:e2e": "vitest run src/__tests__/e2e/",
    "test:all": "vitest run"
  },
  "keywords": [
    "mcp",
    "airtable",
    "fastmcp"
  ],
  "author": "Delta & Beta",
  "license": "MIT",
  "dependencies": {
    "airtable": "^0.12.2",
    "dotenv": "^16.4.5",
    "fastmcp": "^3.26.7",
    "zod": "^3.25.74"
  },
  "devDependencies": {
    "@types/airtable": "^0.5.1",
    "@types/node": "^20.14.10",
    "@vitest/coverage-v8": "^4.0.16",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3",
    "vitest": "^4.0.16"
  }
}
